package login;

import java.sql.Connection;
import java.sql.DriverManager;

import javaBaseDeDatos.ConexionException;


public class Conexion {
	static private Conexion conexion;
	private Connection Connection;
	
	public static Conexion getInstancia() {
		if (conexion == null) {
			try {
				Class.forName("com.mysql.jdbc.Driver");

				Connection con = DriverManager.getConnection("jdbc:mysql://192.168.0.108:3306/curso?useSSL=false",
						"alumnos", "java123");

				Conexion conxion = new Conexion();
				conexion.setConnection(con);
				conexion =conxion;
			} catch (Exception e) {
				throw new ConexionException(":O!",e);
			}
			return conexion;
		} else
			return conexion;
	}

	public Connection getConnection() {
		return Connection;
	}

	public void setConnection(Connection connection) {
		Connection = connection;
	}

}
