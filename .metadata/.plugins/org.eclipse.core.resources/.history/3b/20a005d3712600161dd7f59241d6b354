package cl.curso.java.guias.guia11_1.ejercicio1;

public class RetirarDineroThread extends Thread {

	private CuentaBancaria cuenta;
	private int monto;
	public RetirarDineroThread() {
		this.cuenta=null;
	}
	
	public RetirarDineroThread(CuentaBancaria cuenta) {
		super();
		this.cuenta = cuenta;
	}

	public CuentaBancaria getCuenta() {
		return cuenta;
	}

	public void setCuenta(CuentaBancaria cuenta) {
		this.cuenta = cuenta;
	}
	
	@Override
	public void run() {
		synchronized (cuenta) {
			this.getCuenta().retirarDinero(this.getMonto());
		}
	}

	public int getMonto() {
		return monto;
	}

	public void setMonto(int monto) {
		this.monto = monto;
	}
}
